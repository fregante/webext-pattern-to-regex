{
	"name": "webext-patterns",
	"version": "1.1.1",
	"description": "Tool to convert the patterns of your WebExtension manifest to regex",
	"keywords": [
		"browser",
		"chrome",
		"extension",
		"firefox",
		"glob",
		"permission",
		"match",
		"webext"
	],
	"repository": "fregante/webext-patterns",
	"license": "MIT",
	"author": "Federico Brigante <me@fregante.com> (https://fregante.com)",
	"type": "module",
	"main": "index.js",
	"module": "index.js",
	"files": [
		"index.js",
		"index.d.ts"
	],
	"scripts": {
		"build": "tsc",
		"prepare": "tsc --sourceMap false",
		"test": "tsc && ava && xo",
		"watch": "tsc --watch",
		"lint": "xo --fix"
	},
	"xo": {
		"envs": [
			"browser",
			"webextensions"
		],
		"rules": {
			"unicorn/better-regex": "off"
		}
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^1.0.2",
		"@types/chrome": "0.0.148",
		"ava": "^3.15.0",
		"sinon": "^11.1.1",
		"type-fest": "^1.2.2",
		"typescript": "^4.3.5",
		"xo": "^0.42.0"
	}
}
